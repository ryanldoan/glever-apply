{
  "manifest_version": 3,
  "name": "Glever Apply",
  "version": "0.1.0",
  "permissions": ["storage", "activeTab", "scripting", "unlimitedStorage"],
  "host_permissions": [
    "https://job-boards.greenhouse.io/*",
    "https://jobs.lever.co/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://job-boards.greenhouse.io/*",
        "https://jobs.lever.co/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
